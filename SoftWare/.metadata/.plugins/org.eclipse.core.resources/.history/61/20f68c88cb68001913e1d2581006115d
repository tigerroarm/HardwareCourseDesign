#ifndef TXT_READ_H_
#define TXT_READ_H_

#include "screen_type.h"

//txt文件名最大长度
#define TXT_FILE_NAME_SIZE 51

typedef struct
{
	TextType txtFileName;
	int curPageNum;//当前阅读页数
	int totalPageNum;//总页数
	float curPagePercent;//阅读进度百分数(%)

};

#endif /* TXTSD_H_ */
