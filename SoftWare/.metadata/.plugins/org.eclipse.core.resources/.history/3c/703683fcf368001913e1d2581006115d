void screenMainHomeInit( ScreenHome *scrHomeInst, short width, short height );
void screenMainBookInit( ScreenBook *scrBookInst, short width, short height );
void screenMainSettingInit( ScreenSetting *scrSettingInst, short width, short height );
void screenMainColorPickerInit( ScreenColorPicker *scrColorPickerInst, short width, short height );

void screenMainAreaInfo( ScrMainAreaInfo *mainAreaInfoInst );

#endif /* SCREEN_H_ */
